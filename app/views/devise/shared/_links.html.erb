<%- if controller_name != 'sessions' %>
  <%= link_to 'Log in', new_session_path(resource_name), :class => 'auth-label' %><br />
<% end -%>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to 'Forgot your password?', new_password_path(resource_name), :class => 'auth-label' %><br />
<% end -%>
